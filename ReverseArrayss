import java.util.Arrays;

class Main{
    public static void main(String[] args){
        int[] ar={1,2,3,4,5,6,7};
        int n = ar.length;
        int[] arr= new int[n];
        int j=0;
        for(int i = n-1;i >= 0;i--){
            arr[j] = ar[i];
            j++;
        }
           System.out.println(Arrays.toString(arr));        
    }
}
