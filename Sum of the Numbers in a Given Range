import java.util.Scanner;

class SumNum{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int i = sc.nextInt();
        int num = sc.nextInt();
        int sum = 0;
        
        for( i = 0; i <=num; i++) { 
            sum +=i;
        }
        
        System.out.println(sum);
    }
        
}
